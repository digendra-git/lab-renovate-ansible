{
  "enabled": true,
  "ansible-galaxy": {
    "enabled": true,
    // Add support for 00galaxy.yaml file
    "fileMatch": [
      "00galaxy.yaml"
    ]

  },
  "packageRules": [
    {
      // Keep ansible haxorof.docker_ce galaxy to a version supporting centos7
      "matchDatasources": ["galaxy"],
      "allowedVersions": "<3.3",
      "matchPackageNames": [
        "haxorof.docker_ce"
      ]
    }
  ]
}